    <body>
        
             <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
               <div class="container">
                    <a class="navbar-brand" href="{{ path('home')}}">Home</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                  
                    <div class="collapse navbar-collapse" id="navbarColor01">
                      <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('index_man')}}">Parfum Homme<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('index_woman')}}">Parfum Femme</a>
                        </li>
                        {% if not is_granted(["IS_AUTHENTICATED_FULLY"]) %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('app_login')}}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register')}}">s'enregistrer</a>
                          </li>
                        {% endif %}
                        
                           
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('order')}}">Panier<span id="nbpanier"></span></a>
                        </li>

                        

                      
                      <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                      </form>
                      {% if is_granted(["ROLE_ADMIN"]) %}
                        <li class="nav-item">
                          <a class="nav-link" href="{{ path('admin_index')}}">Admin</a>
                        </li>
                        {% endif %}
                      {#% if app.user is not empty %#}
                      {% if is_granted(["IS_AUTHENTICATED_FULLY"]) %}
                          <li class="nav-item">
                          <a class="nav-link" href="{{ path ('app_logout') }}">se d√©connecter</a>
                          </li>
                    {% endif %}
                          </ul>
                    </div>
                  </div>
                 </nav>
                 {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
{% endfor %}
                 <div class="container">
                   {% block body %}{% endblock %}
                 </div>
        
           
        
        {% block javascripts %} <script src="{{asset('/js/jquery.js')}}"></script> 
        <script src="{{asset('/js/panier.js')}}"></script>
       
        {% endblock %}
       <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
